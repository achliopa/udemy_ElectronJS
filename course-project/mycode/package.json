{
  "name": "Readit",
  "version": "1.0.0",
  "description": "Master Electron Course Project",
  "main": "main.js",
  "author": "Stackackademy.tv",
  "homepage": "https://stackacademy.tv/courses/master-electron",
  "scripts": {
    "start": "electron .",
    "mac": "electron-builder -m",
    "win": "electron-builder -w",
    "linux": "electron-builder -l",
    "build": "electron-build -mwl"
  },
  "build": {
    "appId": "com.stackacademy.readdit",
    "directories": {
      "buildResources": "."
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "certificatFile": "private/readit.p12",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "category": "Network"
    }
  },
  "dependencies": {
    "jquery": "^3.1.1",
    "query-string": "^6.1.0"
  },
  "devDependencies": {
    "electron-builder": "^20.13.3"
  }
}
